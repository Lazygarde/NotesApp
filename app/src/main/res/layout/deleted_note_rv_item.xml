<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/noteContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    card_view:cardBackgroundColor="@color/lightPink">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tdTVNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:maxLines="3"
            android:padding="4dp"
            android:text="@string/noteTitle"
            android:textColor="#312161"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tdTVNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tdTVNoteTitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:maxLines="5"
            android:padding="4dp"
            android:text="@string/notes"
            android:textColor="#BE77B4"
            android:textSize="20sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>